<!-- Jumbotron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container text-light h-100">
    <h1 class="display-4">Bienvenue sur Eventbrite !</h1>
    <p class="lead">Pour ceux qui adorent sortir. Retrouve ici les meilleurs évènements de ta région.</p>
    <hr class="my-4">
    <p>Organise un évènement.</p>
    <p class="lead"><%= link_to "Créer un évènement", new_event_path, class: "btn btn-primary btn-lg", role: "button" %></a></p>
  </div>
</div>
<br/><br/><br/>
<!-- Events list -->
<div class="row card-deck justify-content-center">
  <% @events.each do |event| %>
    <div class="col-sm-5 mx-2 my-4">
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=event.title%></h5>
          <p class="card-text">A lieu le <%=event.start_date.strftime("%d/%m/%Y")%></p>
          <p class="card-text">Durée : <%=event.duration%> minutes</p>
          <p class="card-text">Prix : <%=event.price%>€</p>
          <a><%= link_to "En savoir plus", event_path(event.id), class: "btn btn-primary" %></a>
        </div>
        <div class="card-footer">
          <small class="text-muted">By <%=event.admin.first_name%></small>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br/><br/><br/>
