<div class="col-lg-4 mb-5">
  <div class="card h-100 shadow border-0">
    <%if event.event_picture.attached?%>
      <%= image_tag event.event_picture, alt: 'event_picture', class: "card-img-top" %>
    <% else %>
      <img class="card-img-top" src="https://dummyimage.com/600x350/ced4da/6c757d" alt="..." />
    <% end %>
    <div class="card-body p-4">
      <div class="badge bg-primary bg-gradient rounded-pill mb-2"><%=event.price%>€</div>
      <a <%= link_to "", event_path(event.id), class:"text-decoration-none link-dark stretched-link" %>><h5 class="card-title mb-3"><%=event.title%></h5></a>
      <p class="card-text mb-0">A lieu le <%=event.start_date.strftime("%d/%m/%Y")%></p>
      <p class="card-text mb-0">Durée : <%=event.duration%> minutes</p>
      <p class="card-text mb-0">Ville : <%=event.location%></p>
    </div>
    <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
      <div class="d-flex align-items-end justify-content-between">
        <div class="d-flex align-items-center">
          <img class="rounded-circle me-3" src="https://dummyimage.com/40x40/ced4da/6c757d" alt="..." />
          <div class="small">
            <div class="fw-bold">By <%=event.admin.email%></div>
            <div class="text-muted"><%=event.customers.count%> inscrits</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
