<%= devise_error_messages! %>
<div class="container my-4">
  <div class="row justify-content-md-center">
    <div class="col-6">
      <div class="card">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
          <div class="card-header">Inscription</div>
          <div class="card-body">
            <div class="form-group my-3">
              <%= f.label :email, "Email", class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Entrez votre adresse email" %>
            </div>
            <div class="form-group my-3">
              <%= f.label :password, "Mot de passe", class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Entrer un mot de passe d'au moins 6 caractÃ¨res" %>
            </div>
            <div class="form-group my-3">
              <%= f.label :password_confirmation, "Confirmation du mot de passe", class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confimer votre mot de passe"  %>
            </div>
            <div class="text-center mb-3">
              <%= f.submit "S'inscrire", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
        <p class="text-sm text-center font-weight-bold">
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
  </div>
</div>
